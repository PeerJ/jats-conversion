		<xsd:sequence>
			<xsd:element ref="month" minOccurs="0"/>
			<xsd:element ref="day" minOccurs="0"/>
			<xsd:element ref="year"/>
		</xsd:sequence>
		<xsd:attribute name="media_type" default="print">
			<xsd:simpleType>
				<xsd:restriction base="xsd:NMTOKEN">
					<xsd:enumeration value="online"/>
