		<xsd:restriction base="xsd:string">
			<xsd:maxLength value="17"/>
			<xsd:minLength value="10"/>
			<xsd:pattern value="\d[\d -]+[\dX]"/>
		</xsd:restriction>
	</xsd:simpleType>
